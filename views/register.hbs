{{> navbar}}
<br/><br/><br/><br/><br/>

<div class="d-flex justify-content-center ">
<div class="card bg-light mb-3">
  <h3 class="card-header">Register</h3>
  <div class="card-body">

    <small class="form-text">{{> messages}}</small>

    <p class="card-text">
    <form method="POST" href="/users/register">
       <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name"  placeholder="Enter name" required value={{name}}>
        </div>
        <div class="form-group">
        <label for="Email">Email address</label>
        <input type="email" class="form-control" name="email"  placeholder="Enter email" required value={{email}}>
        </div>
        <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" name="password"  placeholder="Password" required value={{password}}>
        </div>      
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Register</button>
        <div class="form-group">
        <small class="form-text text-muted">Already have an account? <a href="/users/login">Login</a></small> 
        </div>
    </form>    
    </p>
    
  </div>
</div>
</div>